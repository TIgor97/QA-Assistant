{
  "manifest_version": 3,
  "name": "QA Testing Assistant",
  "version": "0.1.0",
  "description": "QA helper: selector picker, test data, page scan test ideas.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "downloads",
    "sidePanel"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "test-data.json",
        "assets/typo/typo.min.js",
        "assets/typo/en_US.aff",
        "assets/typo/en_US.dic"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "QA Testing Assistant",
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}