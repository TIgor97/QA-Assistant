{
  "manifest_version": 3,
  "name": "QA Testing Assistant",
  "version": "0.1.0",
  "description": "QA helper: selector picker, test data, page scan test ideas.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "downloads"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "test-data.json",
        "assets/typo/typo.min.js",
        "assets/typo/en_US.aff",
        "assets/typo/en_US.dic"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "QA Testing Assistant"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}